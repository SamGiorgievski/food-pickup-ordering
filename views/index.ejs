<title></title>

  <body>


  <!-- HEADER SECTION -->

    <header>


      <div id="my_acc">
        <i class = "icon_here">==</i>
        <span>My Account</span>
      </div>
      <h1 id = "menu_title">2 Sam's and a Rohan</h1>
      <section class = "login">
        <form class = "login_form">
          <section class = "email_password">
            <div>

              <input type="text" id="userEmail" placeholder="E-mail" name="userEmail">
            </div>
            <div>

              <input type="text" id="userPW" placeholder="Password" name="userPW">
            </div>
          </section>

          <section class = "login_register_buttons">
            <button class = "button" type = "submit">Login</button>
            <button id="register_button" class = "button" type = "submit">Register</button>
          </section>
        </form>
      </section>

    </header>



    <section class = "main_body pure-g">

    <!-- LEFT PANE SECTION -->
      <section class = "left_pane pure-u-1-5">
        <h2> User information</h2>
        <section>
          <p>name: name_here</p>
          <p>e-mail: email_here</p>
          <p>telephone: telephone#_here</p>
          <button>edit</button>
        </section>
        <h2> Current order</h2>
        <section>
          mystery meat
          <button>Cancel</button>
        </section>
        <h2> Previous orders</h2>
        <section>
          stretch
        </section>

        <!-- User information
          name (from DB)
          email (from DB)```````````````````````````````````
          phone (from DB)
          edit button (change DB information for user)
            popup?
        Current (confirmed) order
          populate with DB info (order #, menu items, quantity, total cost)
        Previous orders ( ? )
          optional (same as current order but for previous order, retrieved from DB) -->
      </section>


  <!-- MENU SECTION -->
  <section class = "menu_body pure-u-3-5">
        <h1> Menu</h1>
        <section class = "cart_icon">
          <i>View Cart</i>
          <i>+</i>
        </section>
        <!-- Menu -->
        <section class = "menu_box">
          <!-- add menu elements using the following structure: -->
        </section>
        <!-- button (add item), picture, title (from DB), description ( ? from DB), cost -->
      </section>

<!-- RIGHT PANE SECTION -->

      <section class = "right_pane pure-u-1-5">
        <h1>Order summary</h1>

        <section>
          <h2> Menu Items:</h2>
          <section class = "cart_items">
            <!-- populate from order object whenever an order is added or removed -->
            <div>
              <button type = "submit">(+)</button>
              <span> #  <span>
              <button type = "submit">(-)</button>
              <span> menuItemName<span>
              <span> $</span>
            </div>
          </section>
        </section>

        <section>
          <h2>Fees and Total</h2>
          <section class = "fees_box">
            <p>Fees: our fees</p>
            <p>Tax: pull from menu object x 13%</p>
            <p>Total: $$$ total</p>
          </section>
        </section>


        <button id="confirm" type = "submit">Confirm</button>
        <button id="cancel" type = "submit">Cancel</button>

        <!-- Order summary
          current order (#, name, price)
        Fees
          Tax
          Service
        Total
          Total cost (current order sum price + tax + service) -->
      </section>
    </section>
